        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10 000 000"
            app:layout_constraintBottom_toTopOf="@id/button_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/number_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/message"
            app:layout_constraintStart_toStartOf="@+id/message"
            app:layout_constraintTop_toBottomOf="@+id/message"
            tools:text="Objectif : 300" />

        <ImageView
            android:id="@+id/button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:maxWidth="350dp"
            tools:src="@drawable/click_button_2_clicked"
            app:layout_constraintBottom_toTopOf="@id/constraint_progress_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number_goal"
            android:clickable="true"
            android:focusable="true" />

        <com.zimoliv.buttonrush.ui.home.ClickAnimationView
            android:id="@+id/clickAnimationView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/button_id"
            app:layout_constraintEnd_toEndOf="@+id/button_id"
            app:layout_constraintStart_toStartOf="@+id/button_id"
            app:layout_constraintTop_toTopOf="@+id/button_id"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/vertical_progressbar"
            style="@style/Vertical2"
            android:layout_width="12dp"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_id"
            app:layout_constraintEnd_toStartOf="@+id/button_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_id"
            android:max="30000"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/number_click_seconde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/vertical_progressbar"
            app:layout_constraintStart_toStartOf="@+id/vertical_progressbar"
            app:layout_constraintTop_toBottomOf="@+id/vertical_progressbar"
            tools:text="5"
            android:visibility="gone"
            tools:visibility="visible"/>

        <View
            android:id="@+id/darkOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/save_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible"
            android:src="@drawable/baseline_save_alt_24"
            android:backgroundTint="@color/adapter_red"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/image_view_sparkle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sparkle"
            app:layout_constraintBottom_toBottomOf="@+id/constraint_progress_bar"
            app:layout_constraintEnd_toEndOf="@+id/constraint_progress_bar"
            app:layout_constraintStart_toStartOf="@id/constraint_progress_bar"
            app:layout_constraintTop_toTopOf="@id/constraint_progress_bar"
            android:visibility="gone" />

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:id="@+id/constraint_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/red_orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_id"
            android:visibility="invisible"
            tools:visibility="visible"
            android:clickable="true"
            android:focusable="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/textViewProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="3589/5000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="6dp"/>

                <ImageView
                    android:id="@+id/leftImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/fire_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewProgress"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="2dp"/>

                <ProgressBar
                    android:id="@+id/progressBar_click"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="50"
                    app:layout_constraintEnd_toStartOf="@id/rightImage"
                    app:layout_constraintStart_toEndOf="@id/leftImage"
                    app:layout_constraintTop_toBottomOf="@id/textViewProgress" />

                <ImageView
                    android:id="@+id/rightImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/blue_dark_knight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewProgress"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="2dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:layout_marginBottom="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tutorialBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="5dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/knight_image"
            android:layout_width="99dp"
            android:layout_height="150dp"
            android:src="@drawable/knight"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#DFA041"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/knight_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tutorialMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                tools:text="Bienvenue dans l'application ! Cliquez ici pour commencer."
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>