<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adView">

        <ImageButton
            android:id="@+id/trophy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/adapter_blue"
            android:src="@drawable/trophy_small"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/button_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10 000 000" />

        <TextView
            android:id="@+id/number_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/message"
            app:layout_constraintStart_toStartOf="@+id/message"
            app:layout_constraintTop_toBottomOf="@+id/message"
            tools:text="Objectif : 300" />

        <ImageView
            android:id="@+id/button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:maxWidth="350dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@id/constraint_progress_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number_goal"
            tools:src="@drawable/click_button_2_clicked" />

        <com.zimoliv.buttonrush.domain.ClickAnimationView
            android:id="@+id/clickAnimationView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/button_id"
            app:layout_constraintEnd_toEndOf="@+id/button_id"
            app:layout_constraintStart_toStartOf="@+id/button_id"
            app:layout_constraintTop_toTopOf="@+id/button_id" />

<!--        <com.airbnb.lottie.LottieAnimationView-->
<!--            android:id="@+id/animation_view_fire"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="100dp"-->
<!--            app:layout_constraintLeft_toLeftOf="@id/vertical_progressbar"-->
<!--            app:layout_constraintRight_toRightOf="@id/vertical_progressbar"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/vertical_progressbar"-->
<!--            app:lottie_rawRes="@raw/animation_fire4"-->
<!--            app:lottie_autoPlay="true"-->
<!--            app:lottie_loop="true"-->
<!--            android:scaleType="centerInside"/>-->

        <ProgressBar
            android:id="@+id/vertical_progressbar"
            style="@style/Vertical2"
            android:layout_width="12dp"
            android:layout_height="300dp"
            android:max="30000"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/button_id"
            app:layout_constraintEnd_toStartOf="@+id/button_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_id"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/image_animation_sparkles"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/vertical_progressbar"
            app:layout_constraintBottom_toBottomOf="@id/vertical_progressbar"
            app:layout_constraintLeft_toLeftOf="@id/vertical_progressbar"
            app:layout_constraintRight_toRightOf="@id/vertical_progressbar"
            android:src="@drawable/animation_sparkling"
            android:scaleType="fitXY"
            android:visibility="invisible"/>

<!--        <com.airbnb.lottie.LottieAnimationView-->
<!--            android:id="@+id/animation_view_sparkles"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            app:layout_constraintTop_toTopOf="@id/vertical_progressbar"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/vertical_progressbar"-->
<!--            app:layout_constraintLeft_toLeftOf="@id/vertical_progressbar"-->
<!--            app:layout_constraintRight_toRightOf="@id/vertical_progressbar"-->
<!--            app:lottie_fileName="animation_sparkles_rain.lottie"-->
<!--            app:lottie_autoPlay="true"-->
<!--            app:lottie_loop="true" />-->

        <ImageView
            android:id="@+id/image_view_fire"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/vertical_progressbar"
            app:layout_constraintRight_toRightOf="@id/vertical_progressbar"
            app:layout_constraintBottom_toBottomOf="@id/vertical_progressbar"
            android:layout_marginBottom="-7dp"
            android:src="@drawable/animation_gif_fire"
            android:scaleType="fitEnd"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/number_click_seconde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/vertical_progressbar"
            app:layout_constraintStart_toStartOf="@+id/vertical_progressbar"
            app:layout_constraintTop_toBottomOf="@+id/vertical_progressbar"
            tools:text="5"
            tools:visibility="visible" />

        <View
            android:id="@+id/darkOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/save_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/adapter_red"
            android:src="@drawable/baseline_save_alt_24"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/image_view_sparkle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sparkle"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/constraint_progress_bar"
            app:layout_constraintEnd_toEndOf="@+id/constraint_progress_bar"
            app:layout_constraintStart_toStartOf="@id/constraint_progress_bar"
            app:layout_constraintTop_toTopOf="@id/constraint_progress_bar" />

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:id="@+id/constraint_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/red_orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_id"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/textViewProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="3589/5000" />

                <ImageView
                    android:id="@+id/leftImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/fire_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewProgress" />

                <ProgressBar
                    android:id="@+id/progressBar_click"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="50"
                    app:layout_constraintEnd_toStartOf="@id/rightImage"
                    app:layout_constraintStart_toEndOf="@id/leftImage"
                    app:layout_constraintTop_toBottomOf="@id/textViewProgress" />

                <ImageView
                    android:id="@+id/rightImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/blue_dark_knight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewProgress" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tutorialBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="5dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/knight_image"
            android:layout_width="99dp"
            android:layout_height="150dp"
            android:src="@drawable/knight"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#DFA041"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/knight_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tutorialMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                tools:text="Bienvenue dans l'application ! Cliquez ici pour commencer."
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-8614714886525599/2303854152"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_view_clicks_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:textColor="@color/design_default_color_secondary"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        tools:visibility="visible"
        tools:text="+548"/>

</androidx.constraintlayout.widget.ConstraintLayout>